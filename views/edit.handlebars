<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>

<div class="container mt-2">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
    <div class="form-group row mb-2">
      <label for="inputName">Name</label>
      <input type="text" class="form-control" id="inputName" placeholder="EX: 麥當勞" name="name" value="{{restaurant.name}}">
    </div>
    <div class="form-group row mb-2">
      <label for="inputNameEn">English Name</label>
      <input type="text" class="form-control" id="inputNameEn" placeholder="EX: McDonald's" name="name_en" value="{{restaurant.name_en}}">
    </div>
    <div class="form-group row mb-2">
      <label for="inputCategory">Category</label>
      <input type="text" class="form-control" id="inputCategory" placeholder="EX: 義式餐廳" name="category" value="{{restaurant.category}}">
    </div>
    <div class="form-group row mb-2">
      <label for="inputImageURL">Image URL</label>
      <input type="text" class="form-control" id="inputImageURL" placeholder="EX: www.google.com" name="image" value="{{restaurant.image}}">
    </div>

    <div class="form-group row mb-2">
      <label for="inputLocation">Location</label>
      <input type="text" class="form-control" id="inputLocation" placeholder="EX: 台北市信義區信義路五段7號" name="location" value="{{restaurant.location}}">
    </div>

    <div class="form-group row mb-2">
      <label for="inputPhone">Phone Number</label>
      <input type="text" class="form-control" id="inputPhone" placeholder="EX: 0912345678" name="phone" value="{{restaurant.phone}}">
    </div>
    
    <div class="form-group row mb-2">
      <label for="inputMap">Google Map URL</label>
      <input type="text" class="form-control" id="inputMap" placeholder="EX: https://goo.gl/maps/nrQViMRtRFBBwJdLA" name="map" value="{{restaurant.google_map}}">
    </div>

    <div class="form-group row mb-2">
      <label for="inputRating">Rating</label>
      <input type="number" min="1.0" max="5.0" step="0.1" class="form-control" id="inputRating" placeholder="EX: 5" name="rating" value="{{restaurant.rating}}">
    </div>
    
    <div class="form-group row mb-2">
      <label for="inputEmail4">Description</label>
      <textarea class="form-control" id="textareaDescription" rows="3" name="description" >{{restaurant.description}}</textarea>
    </div>
   
    <div class="form-group row mt-3 mb-5">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
  </form>
</div> 