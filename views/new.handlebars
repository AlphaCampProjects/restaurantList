<div class="container mt-5">
  <form action="/restaurants" method="POST">
    <div class="form-group row mb-2">
      <label for="inputName">Name</label>
      <input type="text" class="form-control" id="inputName" placeholder="EX: 麥當勞" name="name">
    </div>
    <div class="form-group row mb-2">
      <label for="inputNameEn">English Name</label>
      <input type="text" class="form-control" id="inputNameEn" placeholder="EX: McDonald's" name="name_en">
    </div>
    <div class="form-group row mb-2">
      <label for="inputCategory">Category</label>
      <input type="text" class="form-control" id="inputCategory" placeholder="EX: 義式餐廳" name="category">
    </div>
    <div class="form-group row mb-2">
      <label for="inputImageURL">Image URL</label>
      <input type="text" class="form-control" id="inputImageURL" placeholder="EX: www.google.com" name="image">
    </div>

    <div class="form-group row mb-2">
      <label for="inputLocation">Location</label>
      <input type="text" class="form-control" id="inputLocation" placeholder="EX: 台北市信義區信義路五段7號" name="location">
    </div>

    <div class="form-group row mb-2">
      <label for="inputPhone">Phone Number</label>
      <input type="text" class="form-control" id="inputPhone" placeholder="EX: 0912345678" name="phone">
    </div>
    
    <div class="form-group row mb-2">
      <label for="inputMap">Google Map URL</label>
      <input type="text" class="form-control" id="inputMap" placeholder="EX: https://goo.gl/maps/nrQViMRtRFBBwJdLA" name="map">
    </div>

    <div class="form-group row mb-2">
      <label for="inputRating">Rating</label>
      <input type="number" class="form-control" id="inputRating" placeholder="EX: 5" name="rating">
    </div>
    
    <div class="form-group row mb-2">
      <label for="inputEmail4">Description</label>
      <textarea class="form-control" id="textareaDescription" rows="3" name="description"></textarea>
    </div>
   
    <div class="form-group row mt-3">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </div>
  </form>
</div> 